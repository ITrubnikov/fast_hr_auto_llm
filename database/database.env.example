# ===============================================
# PostgreSQL Database Configuration Example
# ===============================================
# Скопируйте этот файл в .env или добавьте переменные в основной .env

# Основные настройки подключения
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=hr_system
POSTGRES_USER=hr_user
POSTGRES_PASSWORD=hr_secure_password_2024

# URL подключения для приложений
DATABASE_URL=postgresql://hr_user:hr_secure_password_2024@localhost:5432/hr_system

# Настройки пула соединений
POSTGRES_POOL_MIN=2
POSTGRES_POOL_MAX=10
POSTGRES_POOL_TIMEOUT=30

# Настройки для разработки
DEV_POSTGRES_HOST=localhost
DEV_POSTGRES_PORT=5432
DEV_DATABASE_URL=postgresql://hr_user:hr_secure_password_2024@localhost:5432/hr_system

# Настройки для Docker
DOCKER_POSTGRES_HOST=postgres_hr
DOCKER_DATABASE_URL=postgresql://hr_user:hr_secure_password_2024@postgres_hr:5432/hr_system

# Безопасность
POSTGRES_SSL_MODE=prefer
POSTGRES_CONNECT_TIMEOUT=10

# Настройки бэкапа
BACKUP_SCHEDULE="0 2 * * *"  # Каждый день в 2:00
BACKUP_RETENTION_DAYS=7
